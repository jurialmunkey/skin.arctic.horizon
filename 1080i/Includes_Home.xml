                <top>view_pad</top>
                <bottom>view_pad</bottom>
                <orientation>vertical</orientation>
                <itemlayout height="item_list_height" width="160">
                    <control type="group">
                        <control type="image">
                            <right>40</right>
                            <width>item_list_height</width>
                            <height>item_list_height</height>
                            <bordersize>8</bordersize>
                            <texture background="true" colordiffuse="$VAR[Defs_HomeMenu_Icon]">$INFO[ListItem.Icon]</texture>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="item_list_height" width="160">
                    <control type="group">
