<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ====== -->
    <!-- Common -->
    <!-- ====== -->

    <include name="Topbar_Left">
        <param name="fgcolor" default="main_fg" />
        <param name="label" default="$VAR[Label_Header_Content]" />
        <param name="visible" default="!$EXP[Exp_InfoActive]" />
        <definition>
            <control type="group">
                <top>view_pad</top>
                <left>view_pad</left>
                <height>view_header</height>
                <align>left</align>
                <visible>$PARAM[visible]</visible>
                <control type="grouplist">
                    <top>-22</top>
                    <bottom>-20</bottom>
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <usecontrolcoords>true</usecontrolcoords>
                    <visible>!Window.IsVisible(DialogBusy.xml)</visible>
                    <control type="label" id="$PARAM[id]">
                        <aligny>center</aligny>
                        <font>font_topbar</font>
                        <textcolor>$PARAM[fgcolor]_100</textcolor>
                        <label>[CAPITALIZE]$PARAM[label][/CAPITALIZE]</label>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="Topbar_Right">
        <param name="fgcolor" default="main_fg" />
        <definition>
            <control type="group">
                <top>view_pad</top>
                <height>view_header</height>
                <visible>!Window.IsVisible(DialogNotification.xml)</visible>
                <visible>!Window.IsVisible(DialogExtendedProgressBar.xml)</visible>
                <visible>!Window.IsVisible(DialogVolumeBar.xml) | Player.Muted</visible>
                <visible>!Player.HasMedia | Window.IsVisible(fullscreenvideo)</visible>
                <control type="grouplist">
                    <visible>[!Control.HasFocus(60) + !Control.HasFocus(64)] | Skin.HasSetting(EnableShowItemCount)</visible>
                    <right>view_pad</right>
                    <align>right</align>
                    <orientation>horizontal</orientation>
                    <itemgap>0</itemgap>
                    <width>700</width>
                    <usecontrolcoords>true</usecontrolcoords>
                    <control type="group">
                        <width>64</width>
                        <control type="image">
                            <centertop>50%</centertop>
                            <height>40</height>
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="$PARAM[fgcolor]_100">$INFO[Weather.FanartCode,resource://resource.images.weathericons.white/,.png]</texture>
                        </control>
                        <visible>Weather.IsFetched</visible>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <font>font_small</font>
                        <textcolor>$PARAM[fgcolor]_100</textcolor>
                        <label>$INFO[Weather.Temperature]</label>
                        <visible>Weather.IsFetched</visible>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <font>font_small</font>
                        <textcolor>$VAR[ColorHighlight]</textcolor>
                        <label>  |  </label>
                        <visible>[!String.IsEmpty(Weather.Temperature) + Weather.IsFetched]</visible>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <font>font_small</font>
                        <textcolor>$PARAM[fgcolor]_100</textcolor>
                        <label>$INFO[System.Time]</label>
                    </control>
                    <control type="group" description="Mute bug spacer">
                        <centertop>50%</centertop>
                        <height>56</height>
                        <width>72</width>
                        <visible>Player.Muted</visible>
                    </control>
                </control>
                <control type="grouplist">
                    <visible>Control.HasFocus(60) | Control.HasFocus(64) | Skin.HasSetting(EnableShowItemCount) + !String.IsEmpty(Container.NumItems)</visible>
                    <animation type="Conditional" reversible="false" condition="Skin.HasSetting(EnableShowItemCount) + !Skin.HasSetting(DisableClock)">
                        <effect type="slide" start="0,0" end="0,50" time="0" delay="0"/>
                    </animation>
                    <right>view_pad</right>
                    <align>right</align>
                    <orientation>horizontal</orientation>
                    <itemgap>0</itemgap>
                    <width>700</width>
                    <usecontrolcoords>true</usecontrolcoords>
                    <control type="label">
                        <width>auto</width>
                        <font>font_small</font>
                        <textcolor>$PARAM[fgcolor]_100</textcolor>
                        <label>$INFO[Container.NumItems,, $LOCALIZE[31025]]</label>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <font>font_small</font>
                        <textcolor>$VAR[ColorHighlight]</textcolor>
                        <label>  |  </label>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <font>font_small</font>
                        <textcolor>$PARAM[fgcolor]_100</textcolor>
                        <label>$INFO[Container.CurrentPage,$LOCALIZE[31391] , $LOCALIZE[20163] ]$INFO[Container.NumPages]</label>
                    </control>
                    <control type="group" description="Mute bug spacer">
                        <centertop>50%</centertop>
                        <height>56</height>
                        <width>72</width>
                        <visible>Player.Muted</visible>
                    </control>
                </control>
            </control>
        </definition>
    </include>

</includes>
